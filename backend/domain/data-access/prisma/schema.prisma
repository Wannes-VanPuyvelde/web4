generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  email    String  @unique
  password String
  plants   Plant[]
  lights   Light[]
}

model Plant {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  lights      Light[] @relation("PlantLights")
  User        User?   @relation(fields: [userId], references: [id])
  userId      Int?
}

model Light {
  id          Int     @id @default(autoincrement())
  name        String
  light_on    Boolean
  light_color String
  plants      Plant[] @relation("PlantLights")
  User        User?   @relation(fields: [userId], references: [id])
  userId      Int?
}

model Location {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  street      String
  number      Int
  town        String
}